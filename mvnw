# ----------------------------------------------------------------------------
# Maven Start Up Batch script
#
# Required ENV vars:
# JAVA_HOME - location of a JDK home dir
#
# Optional ENV vars
# M2_HOME - location of maven2's installed home dir
# MAVEN_OPTS - parameters passed to the Java VM when running Maven
#     e.g. to debug Maven itself, use
#       set MAVEN_OPTS=-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=8000
# MAVEN_SKIP_RC - flag to disable loading of mavenrc files
# ----------------------------------------------------------------------------

if [ -z "$MAVEN_SKIP_RC" ] ; then

  if [ -f /etc/mavenrc ] ; then
    . /etc/mavenrc
  fi

  if [ -f "$HOME/.mavenrc" ] ; then
    . "$HOME/.mavenrc"
  fi

fi

# OS specific support.  $var _must_ be set to either true or false.
cygwin=false;
darwin=false;
mingw=false
case "`uname`" in
  CYGWIN*) cygwin=true ;;
  MINGW*) mingw=true;;
  Darwin*) darwin=true
    # Use /usr/libexec/java_home if available, otherwise fall back to /Library/Java/Home
    # See https://developer.apple.com/library/mac/qa/qa1170/_index.html
    if [ -z "$JAVA_HOME" ]; then
      if [ -x "/usr/libexec/java_home" ]; then
        export JAVA_HOME="`/usr/libexec/java_home`"
      else
        export JAVA_HOME="/Library/Java/Home"
      fi
    fi
    ;;
esac

if [ -z "$JAVA_HOME" ] ; then
  if [ -r /etc/gentoo-release ] ; then
    JAVA_HOME=`java-config --jre-home`
  fi
fi

if [ -z "$MAVEN_BASEDIR" ] ; then
  MAVEN_BASEDIR="$(
    cd "$(dirname "$0")" || exit 1
    pwd
  )"
fi

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
  [ -n "$M2_HOME" ] && M2_HOME=`cygpath --unix "$M2_HOME"`
  [ -n "$CLASSPATH" ] && CLASSPATH=`cygpath --path --unix "$CLASSPATH"`
fi

# For Migwn, ensure paths are in UNIX format before anything is touched
if $mingw ; then
  [ -n "$JAVA_HOME" ] && JAVA_HOME="`(cd "$JAVA_HOME" || exit 1; pwd)`"
  [ -n "$M2_HOME" ] && M2_HOME="`(cd "$M2_HOME" || exit 1; pwd)`"
  case "$0" in
    */*) SCRIPT_PATH="`cd \"\`dirname \"$0\"\`\" && pwd`/`basename \"$0\"`" ;;
    *) SCRIPT_PATH="`which \"$0\"`" ;;
  esac
fi

if [ -z "$JAVA_HOME" ]; then
  java_executable="`which javac`"
  if [ -n "$java_executable" ] && ! [ "`expr \"$java_executable\" : '\([^ ]*\)'`" = "no" ]; then
    # readlink(1) is not available as standard on Solaris 10.
    readLink="`which readlink`"
    if [ ! `expr "$readLink" : '\([^ ]*\)'` = "no" ]; then
      if $darwin ; then
        javaHome="`dirname \"$java_executable\"`"
        javaHome="`(cd \"$javaHome\" && pwd -P)`"
        javaHome="`dirname \"$javaHome\"`"
      else
        javaHome="`dirname \"$java_executable\"`"
        javaHome="`readlink -f \"$javaHome\"`"
        javaHome="`dirname \"$javaHome\"`"
      fi
      JAVA_HOME="`dirname \"$javaHome\"`"
    fi
  fi
fi

if [ -z "$JAVACMD" ] ; then
  if [ -n "$JAVA_HOME"  ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
      # IBM's JDK on AIX uses strange locations for the executables
      JAVACMD="$JAVA_HOME/jre/sh/java"
    else
      JAVACMD="$JAVA_HOME/bin/java"
    fi
  else
    JAVACMD="`which java`"
  fi
fi

if [ ! -x "$JAVACMD" ] ; then
  echo "Error: JAVA_HOME is not defined correctly." >&2
  echo "  We cannot execute $JAVACMD" >&2
  exit 1
fi

if [ -z "$JAVA_HOME" ] ; then
  echo "Warning: JAVA_HOME environment variable is not set."
fi

CLASSWORLDS_LAUNCHER=org.codehaus.plexus.classworlds.launcher.Launcher

# For Cygwin, switch paths to Windows format before running java
if $cygwin ; then
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --path --windows "$JAVA_HOME"`
  [ -n "$M2_HOME" ] && M2_HOME=`cygpath --path --windows "$M2_HOME"`
  [ -n "$CLASSPATH" ] && CLASSPATH=`cygpath --path --windows "$CLASSPATH"`
  MAVEN_PROJECTBASEDIR=`cygpath --path --windows "$MAVEN_PROJECTBASEDIR"`
fi

# traverses directory structure to process directories one at a time
process_directory() {
  local directory="$1"
  local groupId="$2"
  local artifactId="$3"
  local version="$4"
  local packaging="$5"

  echo "Processing $directory"

  cd "$directory" || return 1

  # execute in subshell to avoid polluting environment
  (
    exec "$WRAPPER_JAR" org.apache.maven.wrapper.MavenWrapperMain \
      -Dexecutable="$WRAPPER_JAR" \
      -DgroupId="$groupId" \
      -DartifactId="$artifactId" \
      -Dversion="$version" \
      -Dpackaging="$packaging" \
      clean install
  )

  # restore current directory
  cd - > /dev/null || return 1
}

WRAPPER_JAR="$MAVEN_BASEDIR/.mvn/wrapper/maven-wrapper.jar"
WRAPPER_LAUNCHER=org.apache.maven.wrapper.MavenWrapperMain

# If wrapper jar exists, use it
if [ -f "$WRAPPER_JAR" ]; then
  # Check for multi-module project
  if [ -f "$MAVEN_PROJECTBASEDIR/pom.xml" ]; then
    # parse the main pom.xml to get project coordinates
    groupId=$(grep -oPm1 "(?<=<groupId>)[^<]+" "$MAVEN_PROJECTBASEDIR/pom.xml")
    artifactId=$(grep -oPm1 "(?<=<artifactId>)[^<]+" "$MAVEN_PROJECTBASEDIR/pom.xml")
    version=$(grep -oPm1 "(?<=<version>)[^<]+" "$MAVEN_PROJECTBASEDIR/pom.xml")
    packaging=$(grep -oPm1 "(?<=<packaging>)[^<]+" "$MAVEN_PROJECTBASEDIR/pom.xml")

    # default values if not found
    : ${groupId:=unknown}
    : ${artifactId:=unknown}
    : ${version:=unknown}
    : ${packaging:=jar}

    # find all directories containing pom.xml (except target directories)
    find "$MAVEN_PROJECTBASEDIR" -name "pom.xml" -not -path "*/target/*" | while read -r pomfile; do
      dir=$(dirname "$pomfile")
      process_directory "$dir" "$groupId" "$artifactId" "$version" "$packaging"
    done
  else
    # single module project
    exec "$JAVACMD" \
      $MAVEN_OPTS \
      -classpath "$WRAPPER_JAR" \
      "-Dmaven.multiModuleProjectDirectory=${MAVEN_PROJECTBASEDIR}" \
      $WRAPPER_LAUNCHER $MAVEN_CONFIG "$@"
  fi
else
  echo "Error: Couldn't find maven-wrapper.jar ($WRAPPER_JAR)"
  echo "       Try running: mvn -N io.takari:maven:wrapper"
  exit 1
fi